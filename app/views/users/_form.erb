<%= form_for(@user) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :wins %>
  <%= f.number_field :wins %>
  <%= f.label :losses %>
  <%= f.number_field :losses %>
  <%= f.label :smack_talk %>
