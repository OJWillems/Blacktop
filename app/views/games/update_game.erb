<div class="player_names">
  <div class="name">
    <h1><%= @team_1.team_name %></h1>
  </div>

  <div class="name">
    <h1><%= @team_2.team_name %></h1>
  </div>
</div>



<div class="period">
  <% if @game.period_counter == 4 %>
    <h4>That's the end of the first quarter folks!</h4>
  <% elsif @game.period_counter == 8 %>
    <h4>That's the end of the second quarter folks!</h4>
  <% elsif @game.period_counter == 12 %>
    <h4>That's the end of the third quarter folks!</h4>
  <% elsif @game.period_counter == 16 %>
    <h4>That's the end of the game folks!</h4>
  <% else %>
    <h4>Last Play Update: <%= @game.game_updates %></h4>
  <% end %><br /><br />
</div>

