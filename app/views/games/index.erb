<div class="start_button">
  <%= button_to "Jump to first game update", '/games/update_game', method: :get, class: "ui orange button"%>
</div>

<div class="floor">
  <img src="https://i.imgur.com/atDQyuM.png" />
</div>

<div class="teams">
  <div class="team_1">
    <% @players.each do |player| %>
      <% if player.team_id == @team_1.id %>
      <div class="ui card">
        <div class="image">
          <img src=" <%= player.player_image %>">
        </div>
        <div class="content">
          <a class="header"> <%= player.name %></a>
          <div class="meta">
            <span class="date"> <%= player.player_team %></span>
          </div>
          <div class="description">
            <b>Position:</b> <%= player.position %><br />
            <b>Points:</b>  <%= player.points %><br />
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <div class="team_2">
    <% @players.each do |player| %>
      <% if player.team_id == @team_2.id %>
      <div class="ui card">
        <div class="image">
          <img src=" <%= player.player_image %>">
        </div>
        <div class="content">
          <a class="header"> <%= player.name %></a>
          <div class="meta">
            <span class="date"> <%= player.player_team %></span>
          </div>
          <div class="description">
            <b>Position:</b> <%= player.position %><br />
            <b>Points:</b>  <%= player.points %><br />
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
